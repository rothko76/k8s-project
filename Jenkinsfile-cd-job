pipeline {
    agent any  // Runs on any available agent
    environment {
        CONSUMER_IMAGE = 'rothko281177/consumer:latest'
        PRODUCER_IMAGE = 'rothko281177/producer:latest'
    }
    
    stages {
        stage('Check Agent') {
            steps {
                sh 'hostname && whoami && uname -a'
            }
        }        
        stage('Helm version check') {
            steps {
                sh 'helm version'
            }
        stage('Install/upgrade helm charts') {
            steps {
                sh 'helm version'
                script {
                    try {
                        echo "Deploying consumer charts"
                        helm upgrade --install my-consumer-release ./consumer-charts/ --values ./consumer-charts/values.yaml

                        echo "Deploying producer charts"
                        helm upgrade --install my-producer-release ./producer-charts/ --values ./producer-charts/values.yaml
                    } catch (Exception e) {
                        currentBuild.result = 'FAILURE'
                        throw e
                    }
                }
            }
        }
    }
    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Build or deployment failed!'
        }
    }
}
